<%- include('../partials/header') %>

    <h1>My trips</h1>
    <p>


    <div class="tripDisplay">
        <% trips.forEach(function(trip) { %>

            <div class="tripCard">
                <img src="https://picsum.photos/500/300.webp" alt="">
                <div class="addPadding">
                    <h2>
                        <%= trip.tripLength %> days in <%= trip.location %>
                    </h2>
                    <span>
                        <%= trip.tripType %>
                    </span>

                    <!-- <div class="notes">
                        You don't have any notes for this trip
                    </div> -->

                    <div style="display: flex; margin-top:20px; display:flex; justify-content: space-between;">
                        <div class="btnBlack"> <a href="/trips/<%= trip._id %>">DETAILS</a></div>
                        <div class="icon"
                            style="width:40px; height:40px; border-radius: 40px; background-image: url(<%= trip.userAvatar %>); background-size: cover;">
                        </div>

                    </div>
                </div>


            </div>

            <% }); %>
    </div>


    </p>
    <%- include('../partials/footer') %>